<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="7"/>
    </Style>

    <Style x:Key="AccentAdditionalBorderStyle" BasedOn="{StaticResource BaseBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource AccentAdditional}"/>
    </Style>

    <Style x:Key="AdditionalBorderStyle" BasedOn="{StaticResource BaseBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Additional}"/>
    </Style>

    <Style x:Key="AccentBorderStyle" BasedOn="{StaticResource BaseBorderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Accent}"/>
    </Style>

</ResourceDictionary>