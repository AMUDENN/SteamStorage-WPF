<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="SteamStorage.Resources.Styles.HyperlinkStyles">

    <Style x:Key="BrowserHyperlinkStyle" TargetType="{x:Type Hyperlink}">
        <EventSetter Event="Click" Handler="BrowserHyperlink_Click"/>
        <Setter Property="Foreground" Value="{DynamicResource Main}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource MainAdditional}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>