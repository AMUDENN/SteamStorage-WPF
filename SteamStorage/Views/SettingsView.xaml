<UserControl x:Class="SteamStorage.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamStorage.Views"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    
    <Grid Margin="30, 5">

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Экспортировать в .dt" 
                Style="{DynamicResource UnderlineTransparentButtonStyle}" 
                HorizontalAlignment="Left" Grid.Row="0"/>

        <Button Content="Экспортировать в .xlsx" 
                Style="{DynamicResource UnderlineTransparentButtonStyle}" 
                HorizontalAlignment="Left" Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Выбрать тему: " Style="{DynamicResource CommonTextBlockStyle}"/>
            <RadioButton Content="Тёмная" IsChecked="{Binding IsDarkTheme}" GroupName="Themes"/>
            <RadioButton Content="Светлая" IsChecked="{Binding IsLightTheme}" GroupName="Themes"/>
            <RadioButton Content="Пользовательская" IsChecked="{Binding IsCustomTheme}" GroupName="Themes"/>
        </StackPanel>

        <Grid Grid.Row="3">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border IsEnabled="{Binding IsCustomTheme}" Style="{DynamicResource AccentAdditionalBorderStyle}">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Main color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="Main additional color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="Additional color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="Accent color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="Accent additional color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="0" Grid.Column="2"/>
                    <TextBlock Text="Percent plus color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="1" Grid.Column="2"/>
                    <TextBlock Text="Percent minus color: " Style="{DynamicResource SmallTitleTextBlockStyle}" TextAlignment="Right" Grid.Row="2" Grid.Column="2"/>

                    <TextBox Text="{Binding MainColor}" Grid.Row="0" Grid.Column="1"/>
                    <TextBox Text="{Binding MainAdditionalColor}" Grid.Row="1" Grid.Column="1"/>
                    <TextBox Text="{Binding AdditionalColor}" Grid.Row="2" Grid.Column="1"/>
                    <TextBox Text="{Binding AccentColor}" Grid.Row="3" Grid.Column="1"/>
                    <TextBox Text="{Binding AccentAdditionalColor}" Grid.Row="0" Grid.Column="3"/>
                    <TextBox Text="{Binding PercentPlusColor}" Grid.Row="1" Grid.Column="3"/>
                    <TextBox Text="{Binding PercentMinusColor}" Grid.Row="2" Grid.Column="3"/>

                    <Button Content="Сохранить" 
                            Command="{Binding SaveColorsCommand}"
                            Style="{DynamicResource UnderlineTransparentButtonStyle}" 
                            Grid.Row="4" Grid.Column="0"/>

                    <Button Content="Сбросить" 
                            Command="{Binding ResetColorsCommand}"
                            Style="{DynamicResource UnderlineTransparentButtonStyle}" 
                            Grid.Row="4" Grid.Column="1"/>

                </Grid>

            </Border>
            
        </Grid>

        <Grid Grid.Row="4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Открыть логи"
                FontSize="24"
                Style="{DynamicResource AccentAdditionalButtonStyle}"
                HorizontalAlignment="Stretch" Padding="15, 0" Margin="0, 10, 5, 10" Grid.Column="0"/>

            <Button Content="Очистить базу данных"
                FontSize="24"
                Style="{DynamicResource AccentAdditionalButtonStyle}"
                HorizontalAlignment="Stretch" Padding="15, 0" Margin="5, 10, 0, 10" Grid.Column="1"/>

        </Grid>

        <Grid Margin="0, 20" Grid.Row="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{DynamicResource AccentAdditionalBorderStyle}" 
                Margin="0, 10, 5, 10" Grid.Column="0">
                <TextBlock Style="{DynamicResource CommonTextBlockStyle}" Margin="10, 0">
                О программе
                <LineBreak/>Лютый текст про программу для учёта инвестиций в Steam 0_0 
                <LineBreak/>(by AMUDENN *ник*)
                </TextBlock>
            </Border>

            <Border Style="{DynamicResource AccentAdditionalBorderStyle}" 
                Margin="5, 10, 0, 10" Grid.Column="1">
                <TextBlock Style="{DynamicResource CommonTextBlockStyle}" Margin="10, 0">
                GitHub: <Hyperlink NavigateUri="https://github.com/AMUDENN/SteamStorage">https://github.com/AMUDENN/SteamStorage</Hyperlink>
                <LineBreak/>TG: <Hyperlink NavigateUri="https://t.me/amudenn">@amudenn</Hyperlink>
                <LineBreak/>Gmail: <Hyperlink NavigateUri="SteamStorage@gmail.com">SteamStorage@gmail.com</Hyperlink>
                </TextBlock>
            </Border>

        </Grid>

    </Grid>
    
</UserControl>
