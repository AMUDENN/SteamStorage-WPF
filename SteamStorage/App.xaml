<Application x:Class="SteamStorage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SteamStorage"
             DispatcherUnhandledException="OnUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Dictionaries\DataTemplate.xaml"/>
                <ResourceDictionary Source="Resources\Dictionaries\Images.xaml"/>
                <ResourceDictionary Source="Resources\Themes\DarkTheme.xaml"/>
                <ResourceDictionary Source="Resources\Dictionaries\MainDictionary.xaml"/>
                <ResourceDictionary Source="Resources\WindowStyles\MainWindowStyle.xaml"/>
                <ResourceDictionary Source="Resources\WindowStyles\DialogWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
